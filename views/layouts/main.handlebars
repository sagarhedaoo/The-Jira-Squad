                        <li class="categories">
                            <a href="http://localhost:3000/photo">Contracts</a>
                        </li>
                       
                        </li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right"> 
                        {{#if userLogin}}
                            <li>
                            <span>
                                <a href="/users/account.html"> <span id="userNAME">Welcome Back! Account : {{userLogin.nickname}}</a></span>&nbsp;&nbsp; 
                            </span>
                            </li>
                            <li>
                            <button type="button" onclick = "window.location.href='/users/signout'" class="btn AllButton navbar-btn">Log Out</button>
                            </li>
                        {{else}}
                            <li>
                            <button type="button" onclick = "window.location.href='/views/signin'" class="btn btn-default navbar-btn">Login</button>
                            </li>

                            <li>
                            <button type="button" onclick = "window.location.href='/users/signup'" class="btn AllButton navbar-btn">Register</button>
                            </li>
                        {{/if}}
                    </ul>
                </div>
            </div>
        </nav>
        <div>
            {{{body}}}
        </div>
        <hr/>
    </div>

    <div class="footer">
        <p>
            <p class="footerButton"> footer </p>
            <p>
               
            </p>
        </p>
    </div>
    
