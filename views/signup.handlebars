<body>
  <div>
     <p class="welcome">Welcome to Solar Management Portal!</p>
      <p class="welcome">To enjoy all that this portal has to offer, RegisterNow!</p>

    <form id="signupForm" method="post" action="/signup">
      <br />
      <p class="noPost">First Name :</p>
  <input
          type="text"
          class="form-control"
          id="fname"
          name="fname"
          placeholder="John"
        />
      <br />
      <p class="noPost">Last Name :</p>
  <input
          type="text"
          class="form-control"
          id="lname"
          name="lname"
          placeholder="Doe"
        />
      <br />
      <p class="noPost">Email :</p>
      <input
        type="email"
        class="form-control"
        id="email"
        name="email"
        placeholder="abc456@gmail.com"
      />
      <br />
      <p class="noPost">Display Name :</p>
      <input
        type="text"
        class="form-control"
        id="nickname"
        name="nickname"
        placeholder="Display Name Here"
      />
      <br />
      <p class="noPost">Password :</p>
      <input
        type="password"
        class="form-control"
        id="password"
        name="password"
        placeholder="Password Here"
      />
      <br />
      <p class="noPost">Confirm Password :</p>
      <input
        type="password"
        class="form-control"
        id="confirm_password"
        name="confirm_password"
        placeholder="Confirm Password Here"
      />
      <br />
      <div class="form-group">
        <button type="submit" class="btn AllButton">Register Now</button>
      </div>

      {{#unless status}}
        <p class="wrongMsg">{{message}}</p>
      {{/unless}}

    </form>
  </div>

</body>